{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react-hooks/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "overrides": [],
    "plugins": [
        "react-refresh"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "max-len": [
            "error",
            {
                "code": 125
            }
        ]
    }
}