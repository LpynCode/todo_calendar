{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react-hooks/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "overrides": [],
    "plugins": [
        "react-refresh"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "semi": true,
                "useTabs": true,
                "trailingComma": "all",
                "bracketSpacing": true,
                "printWidth": 100,
                "endOfLine": "auto"
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ]
    }
}